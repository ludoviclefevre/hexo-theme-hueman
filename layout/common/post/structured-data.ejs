<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "NewsArticle",
    "mainEntityOfPage":{
      "@type":"WebPage",
      "@id":"<%- config.url +  url_for(page.path) %>"
    },
    "headline": <%- JSON.stringify(page.title) %>,
    "image": {
      "@type": "ImageObject",
      "url": "<%- config.url + url_for(page.path + page.thumbnail) %>"
    },
    "datePublished": "<%- page.date.format() %>",
    <% if(page.updated) { %>
    "dateModified": "<%- page.updated.format() %>",
    <% } %>
    "author": {
      "@type": "Person",
      "name": "<%- config.author %>"
    },
     "publisher": {
      "@type": "Organization",
      "name": "<%= JSON.stringify(config.title) %>",
      "logo": {
        "@type": "ImageObject",
        "url": "<%= theme.customize.logo.url %>",
        "width": <%= theme.customize.logo.width %>,
        "height": <%= theme.customize.logo.height %>
      }
    },
    "description": "<%- page.excerpt %>"
  }
</script>

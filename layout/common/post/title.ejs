<% if (post.link) { %>
    <h1 itemprop="name headline">
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url mainEntityOfPage"><%= post.title %></a>
    </h1>
<% } else if (post.title) { %>
    <% if (typeof(linkable) !== 'undefined' && linkable) { %>
        <h1 class="<%= class_name %>" itemprop="name headline">
        <a href="<%- url_for(post.path) %>" itemprop="url mainEntityOfPage"><%= post.title %></a>
        </h1>
    <% } else { %>
        <h1 class="<%= class_name %>" itemprop="name headline">
        <%= post.title %>
        </h1>
    <% } %>
<% } %>
